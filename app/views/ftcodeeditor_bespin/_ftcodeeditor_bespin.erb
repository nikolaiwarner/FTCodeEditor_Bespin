<script type="text/javascript">
  
  $(function(){
    var bespinBase = "/plugins/ftcodeeditor_bespin/BespinEmbedded-0.9a1/";
    var bespinScript = document.createElement('script');
    bespinScript.src = bespinBase + 'BespinEmbedded.js';
    $('head')[0].appendChild(bespinScript);
    
    var bespinLink =  document.createElement('link');
    bespinLink.setAttribute('id', 'bespin_base');
    bespinLink.setAttribute('href', bespinBase);
    $('head')[0].appendChild(bespinLink);
    
    window.onBespinLoad = function() {
    
      if ($(".code_editor")) {
        bespin.useBespin($(".code_editor")[0], {
            stealFocus: true
            , tabmode: 'space'
            , tabstop: 2
            , syntax: "html"
            , highlightline: true
            , syntaxcheck: true
            , codecomplete : true
        });
                        
      }
    }
  });
</script>